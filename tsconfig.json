{
  "compilerOptions": {
    "plugins": [
      {
       "name": "typescript-strict-plugin"
      }
    ],
    "target": "ES2020",
    "module": "ES2020",
    "jsx": "preserve",
    "noEmit": true,
    "downlevelIteration": true,
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "spectron": ["src/js/@types/spectron.d.ts"]
    },
    "typeRoots": [
      "src/js/@types",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["scripts", "dist", "run"]
}
